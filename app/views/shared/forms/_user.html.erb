<%= semantic_form_for @user do |f|%>
  <%= f.inputs do %>
    <%= f.input :email, :value => @user.email %>
    <% if (action_name == 'new' || current_user == @user) %>
      <%= f.input :password,
        :placeholder => 'Leave blank unless no change desired.',
        :value => ''
      %>
      <%= f.input :password_confirmation, :as => :password,
        :placeholder => 'Must match password'
      %>
    <% end %>
  <% end %>
  <%= f.actions %>
<% end %>
